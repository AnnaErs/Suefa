{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": ["./components/*"],
      "@/pages/*": ["./components/pages/*"],
      "@/ui-kit/*": ["./components/ui-kit/*"],
      "@app/*":["./app/*"],
      "@utils/":["./utils/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/pages/Snake/Snake.jsx", "components/pages/Snake/game.js", "components/pages/GameMenu/GameMenu.tsx"],
  "exclude": ["node_modules"]
}
